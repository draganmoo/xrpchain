<!DOCTYPE html>
<html>

<head>
	<title>ChainVault</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">
</head>

<body>
	<div class="col-md-6 col-md-offset-3 form-card">
		<br>
		<div>
			<p>Profile</p>
		</div>
		<div>
			<center>
				<table class="table table-hover text-center">
					<tr>
						<td>Name </td>
						<td>
							<%= name %>
						</td>
					</tr>
					<tr>
						<td>Credit Left </td>
						<td>
							<%= credit %> <div>
								<a class="buy-with-crypto"
								   href="https://commerce.coinbase.com/checkout/c539930b-a9a9-4d81-91d3-58208776bf23">
								  Buy with Crypto
								</a>
								<script src="https://commerce.coinbase.com/v1/checkout.js?version=201807">
								</script>
							  </div>
						</td>
					</tr>
					<tr>
						<td>Subscription Type </td>
						<td>
							Free
						</td>
					</tr>
				</table>
			</center>
		</div>
		<div>
			<center>
				<table class="table table-hover text-center">
					<form method="POST" action="/media" enctype="multipart/form-data">
					<tr>
						<td>Upload New Document </td>
						<td><input type="file" name="file" /></td>
						<td><input type="submit" name="btn_upload_profile_pic" value="Upload" /></td>
					</tr>
					</form>
				</table>
			</center>
		</div>
		<div>
			<center>
				<table class="table table-hover text-center">
					<tr>
						<td>Name </td>
						<td>Size</td>
						<td>Type</td>
						<td>Encrypted</td>
						<td>Decrypted</td>
					</tr>
					<% medias.forEach(function(media){ %>
						<tr>
							<td><%= media.name %> </td>
							<td><%= media.type %> </td>
							<td><%= media.size %> </td>
							<td><a href="/download-enc/<%= media.block %>">Download</a></td>
							<td><a href="/download/<%= media.block %>">Download</a></td>
						</tr>
					<% }) %>
				</table>
			</center>
		</div>
		<div class="abc" id="LangTable">
			<a href="/logout">Logout</a>
		</div>
	</div>
</body>

</html>